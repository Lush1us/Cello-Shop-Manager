<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="https://use.fontawesome.com/4d0a94b320.js"></script>

    <title>Cellos & Violins Dashboard</title>
</head>
<body>
    <header>
        <%- include('./header.ejs') %>
    </header>
    <main id="dashboard">
        <% productTypes.forEach(type => { %>
            <div class="card dashcard" style="width: 18rem;">
                <div class="card-body">
                    <h3 class="card-title"><a class="lk-rm" href="/<%= type.name %>"><%= type.name %></a></h3>
                    <p>Quantity: <%= type.quantity %></p>
                    <p>Average Price: <%= type.avgPrice %></p>
                    <p>Average Cost: <%= type.avgCost %></p>
                    <p>Average Margin: <%= type.avgMargin %></p>
                    <div class="card-body btn-group dash-btn-grp " role="group" aria-label="Basic example">
                        <a href="/<%= type.name %>">
                            <button type="button" class="btn btn-secondary bg-dark" style="border-radius: 3px 0 0 3px;">Details</button>
                        </a>
                        <a href="/<%= type.name %>/new">
                            <button type="button" class="btn btn-secondary bg-dark" style="border-radius: 0 3px 3px 0;">Add new</button>
                        </a>
                    </div>
                </div>
            </div>
            <!-- <section class="product-type">
                <div class="product-display">                    
                    <h3><a href="/<%= type.name %>"><%= type.name %></a></h3>
                    <p>Quantity: <%= type.quantity %></p>
                    <p>Average Price: <%= type.avgPrice %></p>
                    <p>Average Cost: <%= type.avgCost %></p>
                    <p>Average Margin: <%= type.avgMargin %></p>
                    <div class="chart">
                        chart
                    </div>
                </div>
            </section> -->
        <% }) %>
        <section class="card dashcard" style="width: 18rem;">
            
            <div class="card-body">
                <h3>Monthly Finances</h3>
                <p>Sales:        $1,254,672</p>
                <p>Inventory cost: $785,624</p>
                <p>Operation Cost: $328,356</p>
                <p>Profit Margin:  $140,692</p>
                <div class="chart">
                    historical sales chart
                </div>
            </div>
        </section>
    </main>
        
<%- include("./footer.ejs") %> 

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>