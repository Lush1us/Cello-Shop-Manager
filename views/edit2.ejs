<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Form Page</title>
</head>
<body>
    <header>
        <%- include('./header.ejs') %>
    </header>
    <main>
        <div>
            <h2><%= prodType %></h2>
            <h3><%= priorProdType %></h3>
            <% if (prodType !== 'accessories' && prodType !== 'maker') { %>    
                <a href="/maker/new?_priorProdType=<%= prodType %>"><button type="submit">Add New Maker</button></a>
                <br>
            <% } %>
            <form action="/<%= prodType %>?_priorProdType=<%= priorProdType %>" method="POST">
                <% if (prodType !== 'accessories' && prodType !== 'maker' && prodType !== 'bow') { %>    
                    <label for="Maker">Maker</label>
                    <select type="text" id="maker" name="makerId"> 
                        <% for (let i = 0; i < makers.length; i++) { %>
                            <option value="<%= makers[i]._id %>"
                                <%= makers[i]._id.toString() === Product._id.toString() ? 'seleted': null %>
                            ><%= makers[i].name %></option>
                        <% } %>
                    </select>
                    <br>        
                <% } %>
                <% for (let [key] of Object.entries(schema)) { %>
                    <% if (key !== 'products' && key !== 'bio') { %>
                        <label for="<%= `${key}` %>"><%= `${key}: ` %></label>
                        <input type="text" name="<%= `${key}` %>" id="<%= `${key}` %>" value="<%= Product[key] %>">
                        <br>
                    <% } else if (key === 'bio') { %>
                        <label for="<%= `${key}` %>"><%= `${key}: ` %></label>
                        <textarea name="<%= `${key}` %>" id="<%= `${key}` %>" value="<%= Product[key] %>" cols="30" rows="10"></textarea>
                        <br>
                    <% } %>  
                <% } %>  
            
                <button type="submit">Submit</button>
            </form>
        </div>
    </main>
    
</body>
</html>